	"version": "0.2.0",
	"configurations": [
		{
			"name": "Current TS File",
			"type": "pwa-node",
			"request": "launch",
			"sourceMaps": true,
			"smartStep": true,
			"args": ["${relativeFile}"],
			"runtimeArgs": ["-r", "ts-node/register", "-r", "tsconfig-paths/register"],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}
