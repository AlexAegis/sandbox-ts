{
	"compilerOptions": {
		"lib": ["es2020", "dom"],
		"module": "commonjs",
		"target": "es2020",
		"rootDir": "./src/",
		"sourceMap": false,
		"strict": false,
		"baseUrl": "./",
		"paths": {
			"@root": ["src"],
			"@root/*": ["src/*"]
		},
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
