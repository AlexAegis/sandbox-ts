{
	"compilerOptions": {
		"lib": ["es2017", "esnext.asynciterable"],
		"module": "commonjs",
		"target": "es2020",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"sourceMap": false,
		"strict": false,
		"baseUrl": "./",
		"paths": {
			"@root": ["src"],
			"@root/*": ["src/*"]
		},
		"typeRoots": ["./node_modules/@types"]
	},
	"include": ["./src/**/*"],
	"exclude": ["./node_modules/**/*"]
}
